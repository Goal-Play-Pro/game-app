{
  "name": "gol-play",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently \"npm run start:backend:dev\" \"npm run dev\"",
    "build": "tsc && vite build",
    "build:frontend": "vite build",
    "build:all": "npm run build:backend && npm run build:frontend",
    "build:backend": "nest build",
    "start:backend": "node dist/main.js",
    "start:backend:dev": "npm run build:backend && node dist/main.js",
    "start:backend:prod": "NODE_ENV=production node dist/main.js",
    "start:prod": "npm run build:backend && npm run start:backend:prod",
    "deploy:do": "doctl apps create --spec .do/app.yaml",
    "deploy:update": "doctl apps update $APP_ID --spec .do/app.yaml",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "compile": "hardhat compile",
    "deploy:bsc": "hardhat run scripts/deploy-bsc.js --network bsc",
    "deploy:testnet": "hardhat run scripts/deploy-bsc.js --network bscTestnet",
    "verify:bsc": "hardhat verify --network bsc"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/schedule": "^4.1.1",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^5.2.0",
    "@nestjs/typeorm": "^10.0.2",
    "@tanstack/react-query": "^5.8.4",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bignumber.js": "^9.1.2",
    "bignumber.js": "^9.3.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "clsx": "^2.0.0",
    "compression": "^1.8.1",
    "ethers": "^6.15.0",
    "framer-motion": "^10.16.5",
    "helmet": "^7.2.0",
    "lucide-react": "^0.294.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "reflect-metadata": "^0.1.14",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.20",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/node": "^24.5.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  }
}
