{
  "name": "gol-play",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:frontend": "vite build",
    "build:all": "npm run build:backend && npm run build:frontend",
    "build:backend": "nest build",
    "start:backend": "nest start",
    "start:backend:dev": "nest start --watch",
    "start:backend:prod": "node dist/main",
    "start:mock": "USE_MOCK_API=true npm run start:backend:dev",
    "start:real": "USE_MOCK_API=false npm run start:backend:dev",
    "migrate:json-to-db": "ts-node --project tsconfig.backend.json src/database/scripts/migrate-json-to-db.ts",
    "rollback:db-to-json": "ts-node --project tsconfig.backend.json src/database/scripts/rollback-to-json.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "compile": "hardhat compile",
    "deploy:bsc": "hardhat run scripts/deploy-bsc.js --network bsc",
    "deploy:testnet": "hardhat run scripts/deploy-bsc.js --network bscTestnet",
    "verify:bsc": "hardhat verify --network bsc"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^5.2.0",
    "@nestjs/typeorm": "^10.0.2",
    "@solana/web3.js": "^1.98.4",
    "@supabase/supabase-js": "^2.57.4",
    "@tanstack/react-query": "^5.8.4",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "clsx": "^2.0.0",
    "compression": "^1.8.1",
    "decimal.js": "^10.6.0",
    "ethers": "^6.15.0",
    "framer-motion": "^10.16.5",
    "helmet": "^7.2.0",
    "lucide-react": "^0.294.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.13.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.20",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/jest": "^29.5.14",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "hardhat": "^2.19.4",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "supertest": "^7.1.3",
    "tailwindcss": "^3.3.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  }
}
